<div id="modal_registro" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><%= params[:tipo_ingreso].titleize %></h3>
  </div>
  <%= form_for :usuario, html: {id: "formulario_#{params[:tipo_ingreso]}", method: 'post'} do |f| %>
    <div class="modal-body">
      <%= f.email_field :correo_electronico, {placeholder: 'Correo electrónico'} %><br>
      <%= f.password_field :password, {placeholder: 'Contraseña'}%>
      <%= f.hidden_field :perfil, value: params[:perfil] %>
      <%= hidden_field_tag :tipo_ingreso, params[:tipo_ingreso] %>
    </div>
    <div class="modal-footer">
     <%= f.submit "Registro", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>



