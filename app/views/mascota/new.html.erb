<div class="secondary-container">
	<div class="well">
		<div class="row">
			<div class="span6 offset3">
				<h3>Registrar Mascota</h3>
				<%= form_for(:mascota, url:{action: "new", method: 'POST'}) do |f| %>

					<%= f.label :nombre %>
					<%= f.text_field :nombre %>

    			<%= label_tag "Selecciona la edad" %>
  				<%= f.select :edad, @edades, {prompt: 'Edad'}, {class: "edad"} %>

  				<%= label_tag "Selecciona el genero" %>
   			 	<%= f.select :genero, @generos, {prompt: 'GÃ©nero'}, {class: "genero"} %>

